<section class="top-selling" id="TopSelling-{{ section.id }}">
  <div class="container">
    <div class="section-header">
      <h2 class="section-title">Top Selling Products</h2>
      <p class="section-subtitle">Customer favorites that keep selling out</p>
    </div>
    
    <div class="products-grid">
      {% for block in section.blocks %}
        {% case block.type %}
          {% when 'product' %}
            <div class="product-card" {{ block.shopify_attributes }}>
              <div class="product-image">
                {% if block.settings.image %}
                  {{ block.settings.image | image_url: width: 400 | image_tag: loading: 'lazy' }}
                {% else %}
                  <img src="https://via.placeholder.com/400x500/f8f8f8/666666?text={{ block.settings.title | url_encode }}" alt="{{ block.settings.title }}" loading="lazy">
                {% endif %}
                {% if block.settings.badge %}
                  <span class="product-badge product-badge--{{ block.settings.badge_type }}">{{ block.settings.badge }}</span>
                {% endif %}
              </div>
              <div class="product-info">
                <h3 class="product-title">{{ block.settings.title }}</h3>
                <div class="product-price">
                  {% if block.settings.compare_price and block.settings.compare_price != blank %}
                    <span class="price-compare">${{ block.settings.compare_price }}</span>
                  {% endif %}
                  <span class="price-current">${{ block.settings.price }}</span>
                </div>
                {% if block.settings.rating %}
                  <div class="product-rating">
                    {% for i in (1..5) %}
                      <span class="star {% if i <= block.settings.rating %}star--filled{% endif %}">â˜…</span>
                    {% endfor %}
                    <span class="rating-count">({{ block.settings.review_count }})</span>
                  </div>
                {% endif %}
              </div>
            </div>
        {% endcase %}
      {% endfor %}
    </div>
    
    <div class="section-footer">
      <a href="{{ section.settings.view_all_link }}" class="btn-view-all">View All Products</a>
    </div>
  </div>
</section>

{% stylesheet %}
.top-selling {
  padding: 80px 0;
  background: #f8f8f8;
}

.products-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
  gap: 32px;
  margin-bottom: 60px;
}

.product-card {
  background: white;
  border-radius: 12px;
  overflow: hidden;
  box-shadow: 0 4px 20px rgba(0,0,0,0.08);
  transition: all 0.3s ease;
  cursor: pointer;
}

.product-card:hover {
  transform: translateY(-4px);
  box-shadow: 0 8px 32px rgba(0,0,0,0.12);
}

.product-image {
  position: relative;
  aspect-ratio: 4/5;
  overflow: hidden;
}

.product-image img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  transition: transform 0.3s ease;
}

.product-card:hover .product-image img {
  transform: scale(1.05);
}

.product-badge {
  position: absolute;
  top: 12px;
  left: 12px;
  padding: 4px 12px;
  font-size: 12px;
  font-weight: 600;
  text-transform: uppercase;
  border-radius: 20px;
  color: white;
}

.product-badge--bestseller {
  background: #d4af37;
}

.product-badge--sale {
  background: #e74c3c;
}

.product-badge--new {
  background: #27ae60;
}

.product-info {
  padding: 20px;
}

.product-title {
  font-size: 16px;
  font-weight: 500;
  color: #1a1a1a;
  margin-bottom: 12px;
  line-height: 1.4;
}

.product-price {
  margin-bottom: 12px;
}

.price-compare {
  color: #999;
  text-decoration: line-through;
  margin-right: 8px;
}

.price-current {
  font-size: 18px;
  font-weight: 600;
  color: #d4af37;
}

.product-rating {
  display: flex;
  align-items: center;
  gap: 4px;
}

.star {
  color: #ddd;
  font-size: 14px;
}

.star--filled {
  color: #ffc107;
}

.rating-count {
  font-size: 12px;
  color: #666;
  margin-left: 4px;
}

.section-footer {
  text-align: center;
}

.btn-view-all {
  display: inline-flex;
  align-items: center;
  gap: 8px;
  background: #1a1a1a;
  color: white;
  padding: 16px 32px;
  text-decoration: none;
  border-radius: 8px;
  font-weight: 500;
  transition: all 0.3s ease;
}

.btn-view-all:hover {
  background: #d4af37;
  transform: translateY(-2px);
}

@media (max-width: 768px) {
  .products-grid {
    grid-template-columns: repeat(2, 1fr);
    gap: 20px;
  }
}
{% endstylesheet %}

