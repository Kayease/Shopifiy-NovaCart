<section class="zest-features" id="ZestFeatures-{{ section.id }}">
  <div class="zest-features__container">
    {% for block in section.blocks %}
      {% case block.type %}
        {% when 'feature' %}
          <div class="zest-feature" {{ block.shopify_attributes }}>
            {% if block.settings.icon %}
              <div class="zest-feature__icon">
                {{ block.settings.icon }}
              </div>
            {% endif %}
            {% if block.settings.title %}
              <h3>{{ block.settings.title }}</h3>
            {% endif %}
            {% if block.settings.description %}
              <p>{{ block.settings.description }}</p>
            {% endif %}
          </div>
      {% endcase %}
    {% endfor %}
  </div>
</section>

